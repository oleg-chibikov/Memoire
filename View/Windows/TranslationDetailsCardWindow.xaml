<customWindow:AnimatedWindow
    x:Class="Mémoire.View.Windows.TranslationDetailsCardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Mémoire.ViewModel;assembly=Mémoire.ViewModel"
    xmlns:customWindow="clr-namespace:Scar.Common.WPF.View.CustomWindow;assembly=Scar.Common.WPF.View.CustomWindow"
    xmlns:translationDetails="clr-namespace:Mémoire.View.Controls.TranslationDetails;assembly=Mémoire.View.Controls.TranslationDetails"
    d:DataContext="{d:DesignInstance d:Type=viewModel:TranslationDetailsCardViewModel}"
    Background="{StaticResource DarkerBackground}"
    Focusable="False"
    Icon="pack://application:,,/Mémoire.View;component/Images/IconAlt.ico"
    ShowActivated="true"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <translationDetails:TranslationDetailsCardControl />
</customWindow:AnimatedWindow>
