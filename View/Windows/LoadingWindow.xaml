<core:AnimatedWindowWithoutTemplate
    x:Class="Mémoire.View.Windows.LoadingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:core="clr-namespace:Scar.Common.WPF.View.Core;assembly=Scar.Common.WPF.View.Core"
    x:ClassModifier="internal"
    Background="Transparent"
    Focusable="False"
    ShowActivated="False"
    ShowInTaskbar="False"
    Topmost="True">
    <core:BaseWindow.Resources>
        <ResourceDictionary Source="pack://application:,,,/Scar.Common.WPF.Controls.Styles;component/Spinner.xaml" />
    </core:BaseWindow.Resources>
    <Control Style="{StaticResource BusyAnimationStyle}" ToolTip="{lex:Loc Scar.Mémoire.Resources:Texts:Loading}" />
</core:AnimatedWindowWithoutTemplate>
