<customWindow:AnimatedWindowWithoutTemplate
    x:Class="Mémoire.View.Windows.SplashScreenWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonView="clr-namespace:Scar.Common.WPF.View.Core;assembly=Scar.Common.WPF.View.Core"
    xmlns:customWindow="clr-namespace:Scar.Common.WPF.View.CustomWindow;assembly=Scar.Common.WPF.View.CustomWindow"
    Background="Transparent"
    ShowInTaskbar="False"
    StayCentered="True"
    Topmost="True">
    <TextBlock
        Name="MainText"
        Padding="100"
        DockPanel.Dock="Left"
        Foreground="{StaticResource DarkerBackground}"
        Style="{StaticResource SplashScreen}"
        Text="Mémoire">
        <TextBlock.Effect>
            <DropShadowEffect
                BlurRadius="8"
                Opacity="1"
                ShadowDepth="0"
                Color="White" />
        </TextBlock.Effect>
    </TextBlock>
</customWindow:AnimatedWindowWithoutTemplate>
